#include <stdio.h>

int main() {
    int n;
    printf("Enter the number of elements:\n ");
    scanf("%d", &n);

    int arr1[n],arr2[n]; 
    for (int i = 0; i < n; i++) {
         printf("Enter the number %d of the arry 1:",i+1 );
        scanf("%d", &arr1[i]);
    }

    for (int i = 0; i < n; i++) {
     printf("Enter the number %d of the arry 2:",i+1 );
     scanf("%d",&arr2[i]);
    }
    printf("sum of the two array:\n");
    for (int i = 0; i < n; i++) {
        printf("%d\n", arr1[i]+arr2[i]);
    }

    return 0;
}
